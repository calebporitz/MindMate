<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFCF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="144dp"
            android:layout_marginTop="-40dp"
            android:backgroundTint="#00A3A3A3"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationX="120dp"
            app:srcCompat="@drawable/logo_1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register now with your TU/e email"
            android:textAlignment="center"
            android:textColor="#1B6B1F"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Email -->
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter TU/e email:"
            android:textColor="#787878"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:hint="email@student.tue.nl"
            android:padding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Full name -->
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Enter your full name:"
            android:textColor="#787878"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:hint="John Doe"
            android:padding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Password -->
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Set a password:"
            android:textColor="#787878"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Repeat password -->
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Fill in your password again:"
            android:textColor="#787878"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editTextPasswordRepeat"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Button -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#D32F2F"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />

        <!-- Progress Bar (hidden initially) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
