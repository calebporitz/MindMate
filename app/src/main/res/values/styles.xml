<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Mode Theme -->
    <style name="Theme.MindMates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background Color -->
        <item name="android:windowBackground">@color/mindmate_light_yellow</item>
        <!-- Text Color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/mindmate_green</item>
        <item name="colorPrimaryVariant">@color/mindmate_dark_green</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Dark Mode Theme -->
    <style name="Theme.MindMates.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background Color -->
        <item name="android:windowBackground">@color/mindmate_dark_green</item>
        <!-- Text Color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/mindmate_green</item>
        <item name="colorPrimaryVariant">@color/mindmate_dark_green</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

</resources>
